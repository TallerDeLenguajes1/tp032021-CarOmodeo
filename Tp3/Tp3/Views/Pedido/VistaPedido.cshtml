@model SistemaCadeteria.Modelo.Cadeteria


<table class="table">
    <thead>
        <tr>
            <th scope="col">Nro</th>
            <th scope="col">DNI</th>
            <th scope="col">Nombre</th>
            <th scope="col">Dirección</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Observaciones</th>
            <th scope="col">Estado</th>
            <th scope="col">Cadete</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.pedidos)
        {
            <form asp-action="AsignarCadete">
                <tr>
                    <td hidden> <input name="idPedido" value = "@item.Nro"></td>
                    <th scope="row">@item.Nro</th>
                    <td>@item.Cliente.Id</td>
                    <td>@item.Cliente.Nombre</td>
                    <td>@item.Cliente.Direccion</td>
                    <td>@item.Cliente.Telefono</td>
                    <td>@item.Estado</td>
                    <td>@item.Obs</td>
                    <td>
                        <select name="idCadete" class="form-select" required>
                            @*<option>Seleccionar un cadete...</option>*@
                            @foreach (var cadete in Model.cadetes)
                            {
                                @if (cadete.ListaPedido.Exists(a => a.Nro == item.Nro))
                                {
                                    <option selected value="@cadete.Id">@cadete.Nombre</option>
                                }
                                else
                                {
                                    <option value="@cadete.Id">@cadete.Nombre</option>
                                }
                            }
                        </select>
                    </td>
                    <td><button type="submit" class="btn btn-primary">Asignar Cadete</button></td>
                    <td>@Html.ActionLink("Eliminar", "EliminarPedido", new {idPedido = item.Nro }, new { @class = "btnagre" })</td>
                </tr>                
            </form>
        }
        </tbody>
</table>

