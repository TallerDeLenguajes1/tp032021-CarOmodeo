@{
    ViewData["Title"] = "MostrarPedido";
}
@model SistemaCadeteria.Modelo.Cadete


<table class="table">
    <thead>
        <tr>
            <th scope="col">Nro</th>
            <th scope="col">DNI</th>
            <th scope="col">Nombre</th>
            <th scope="col">Dirección</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Observaciones</th>
            <th scope="col">Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaPedido)
        {
            <tr>
                <th scope="row">@item.Nro</th>
                <td>@item.Cliente.Id</td>
                <td>@item.Cliente.Nombre</td>
                <td>@item.Cliente.Direccion</td>
                <td>@item.Cliente.Telefono</td>
                <td>@item.Obs</td>
                <td>@item.Estado</td>
            </tr>
        }
    </tbody>
</table>

