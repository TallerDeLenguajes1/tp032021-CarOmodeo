@model List<SistemaCadeteria.Modelo.Cadete>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Dirección</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Pedidos</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>
                <td>@item.ListaPedido.Count()</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="AltaCadete" asp-controller="Home" method="post">
    <input type="submit" value="Agragar Nuevo Cadete" />
</form>

