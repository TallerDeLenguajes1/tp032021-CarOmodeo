@{
}
@model SistemaCadeteria.Modelo.Cadete

<h2>Modificar Cadete</h2>

<form asp-action="ModificarCadete" asp-controller="Cadete" method="post">
    <fieldset>
        <div>
            <input hidden name="id" type="text" value="@Model.Id" />
        </div>
        <div class="mb-3">
            <label for="disabledText" class="form-label">Nombre</label>
            <input type="text" name="nombre" id="disabledText" class="form-control" value="@Model.Nombre">
        </div>
        <div class="mb-3">
            <label for="disabledText" class="form-label">Direccion</label>
            <input type="text" name="direccion" id="disabledText" class="form-control" value="@Model.Direccion ">
        </div>
        <div class="mb-3">
            <label for="disabledText" class="form-label">Telefono</label>
            <input type="text" name="telefono" id="disabledText" class="form-control" value=" @Model.Telefono">
        </div>

        <button type="submit" class="btn btn-primary">Enviar!!</button>
    </fieldset>
</form>